<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.SCMapper">

    <select id="findAll" resultType="com.example.demo.entity.SC">
        SELECT * FROM sc
    </select>

    <select id="findById" parameterType="int" resultType="com.example.demo.entity.SC">
        SELECT * FROM sc WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.example.demo.entity.SC">
        INSERT INTO sc(student_id, course_id, score)
        VALUES(#{studentId}, #{courseId}, #{score})
    </insert>

    <update id="update" parameterType="com.example.demo.entity.SC">
        UPDATE sc
        SET student_id = #{studentId}, course_id = #{courseId}, score = #{score}
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM sc WHERE id = #{id}
    </delete>

</mapper>
