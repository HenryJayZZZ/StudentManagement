<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.CourseMapper">

    <select id="findAll" resultType="com.example.demo.entity.Course">
        SELECT * FROM course
    </select>

    <select id="findById" parameterType="int" resultType="com.example.demo.entity.Course">
        SELECT * FROM course WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.example.demo.entity.Course">
        INSERT INTO course(name, credit)
        VALUES(#{name}, #{credit})
    </insert>

    <update id="update" parameterType="com.example.demo.entity.Course">
        UPDATE course
        SET name = #{name}, credit = #{credit}
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM course WHERE id = #{id}
    </delete>

</mapper>
